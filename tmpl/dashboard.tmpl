{{- template "header" . }}
<h3 class="page-header">Dashboard <small>{{ .T.Name }}</small></h3>
{{ if eq .T.Group "blueteam" }}
    {{ template "blueteam_dash" . }}
{{ else if eq .T.Group "admin" }}
    {{ template "admin_dash" . }}
{{ end }}
{{- template "footer" . }}

{{/*
      BLUE TEAM
*/}}
{{ define "blueteam_dash" }}
<div class="row">
    <div class="col-md-6">
        <h5>Team #{{ .T.Number }}</h5>
        <h5>Points: {{ teamScore .T.Name }}</h5>
    </div>
    <div class="col-md-6">
        <div class="row">
            {{- $total := totalChallenges }}
            {{- $aquired := teamChallenges .T.Name }}
            {{- range $key, $value := $total }}
            <div class="col-lg-5 col-md-6">
                <div class="panel panel-default">
                    <div id="flag-panel" class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-flag fa-4x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ index $aquired $key }}/{{ $value }}</div>
                                <div>{{ $key }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{- end }}
        </div>
        <div class="row">
            <div class="col-md-12">
                <form id="flag-form" class="form" role="search">
                    <fieldset>
                        <div id="flag-enter" class="form-group has-feedback">
                            <label for="flag-value" class="control-label">Enter Flag: </label>
                            <input type="text" class="form-control" id="flag-value" placeholder="Flag{f1AG}">
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span id="inputSuccess2Status" class="sr-only"></span>
                        </div>
                        <div class="form-group">
                            <button type="button" id="flag-submit" class="btn btn-default">Submit</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{{ end }}

{{/*
      ADMIN TEAM
*/}}
{{ define "admin_dash" }}
<div class="row col-md-12 admin-dash">
    <div class="user-configuration-panel">
        <h4>All Users</h4>
        <div class="table-responsive">
            <table id="user-config-table" class="table table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Group</th>
                    <th>Number</th>
                    <th>IP</th>
                    <th>Password</th>
                </tr>
                {{- range $userData := allUsers }}
                    {{- with $userData }}
                    <tr>
                        <td>{{ .Name   }}</td>
                        <td>{{ .Group  }}</td>
                        <td>{{ .Number }}</td>
                        <td>{{ .Ip     }}</td>
                        <td class="placeholder">{Unchanged}</td>
                    </tr>
                    {{- end }}
                {{- end }}
            </table>
        </div>
        <div class="btn-group btn-group-sm">
            <button class="btn btn-default" type="button">
                <i class="fa fa-plus" aria-hidden="true"></i> Add row
            </button>
            <button class="btn btn-default" type="button">
                <i class="fa fa-upload" aria-hidden="true"></i> Submit
            </button>
        </div>
    </div>
</div>
{{ end }}