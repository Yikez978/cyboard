{{- template "header" . }}
<h3 class="page-header">Dashboard <small>{{ .T.Name }}</small></h3>
{{ if eq .T.Group "blueteam" }}
    {{ template "blueteam_dash" . }}
{{ else if eq .T.Group "admin" }}
    {{ template "admin_dash" . }}
{{ end }}
{{- template "footer" . }}

{{/*
      BLUE TEAM
*/}}
{{ define "blueteam_dash" }}
<div class="row">
    <div class="col-md-6">
        <h5>Team #{{ .T.Number }}</h5>
        <h5>Points: {{ teamScore .T.Name }}</h5>
    </div>
    <div class="col-md-6">
        <div class="row">
            {{- $total := totalChallenges }}
            {{- $aquired := teamChallenges .T.Name }}
            {{- range $key, $value := $total }}
            <div class="col-lg-5 col-md-6">
                <div class="panel panel-default">
                    <div id="flag-panel" class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-flag fa-4x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ index $aquired $key }}/{{ $value }}</div>
                                <div>{{ $key }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{- end }}
        </div>
        <div class="row">
            <div class="col-md-12">
                <form id="flag-form" class="form" role="search">
                    <fieldset>
                        <div id="flag-enter" class="form-group has-feedback">
                            <label for="flag-value" class="control-label">Enter Flag: </label>
                            <input type="text" class="form-control" id="flag-value" placeholder="Flag{f1AG}">
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span id="inputSuccess2Status" class="sr-only"></span>
                        </div>
                        <div class="form-group">
                            <button type="button" id="flag-submit" class="btn btn-default">Submit</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{{ end }}

{{/*
      ADMIN TEAM
*/}}
{{ define "admin_dash" }}
<div class="row col-md-12 admin-dash">
    <div class="user-configuration-panel">
        <h4>All Users</h4>
        <div class="table-responsive">
            <table id="user-config-table" class="table table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Team/Group</th>
                    <th>Number</th>
                    <th>IP</th>
                    <th>Password</th>
                    <th>Remove?</th>
                </tr>
                {{- range $userData := allUsers }}
                    {{- with $userData }}
                    <tr>
                        <td>{{ .Name   }}</td>
                        <td>{{ .Group  }}</td>
                        <td>{{ .Number }}</td>
                        <td>{{ .Ip     }}</td>
                        <td class="placeholder">{Unchanged}</td>
                        <td><i class="fa fa-trash" aria-hidden="true"></i></td>
                    </tr>
                    {{- end }}
                {{- end }}
            </table>
        </div>

        <p>You can add/update users by uploading a CSV file, below.</p>

        <p><em>Guidelines:</em></p>
        <ul>
            <li>Users are updated by matching their <em>Name</em>.</li>
            <li>Valid teams are: blueteam, redteam, whiteteam, blackteam, and admin.</li>
            <li>The <em>IP</em> and <em>Number</em> are super useless for non-blueteam members.</li>
            <li>All leading spaces are trimmed, unless quotes " are used.</li>
            <li><em>Changing a blueteam's name after scoring has begun will break
                the competition display!</em>
                <ul>
                    <li>Deleting the user will effectively "disable" them.</li>
                </ul>
            </li>
            <li>When updating, leave the password field blank to leave it alone.</li>
        </ul>

        <div class="user-config-csv-upload form-group">
            <form>
                <textarea class="form-control" rows="10" style="font-family:monospace"></textarea>
                <button class="btn btn-default" type="submit">
                    <i class="fa fa-upload" aria-hidden="true"></i> Submit
                </button>
            </form>
        </div>
    </div>
</div>
{{ end }}